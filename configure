#!/bin/sh
exec > makefile
cat Makefile

. .lib.configure

for file in */configure; do
	"$file"
done

echo
echo '# Dependencies'
for file in */*.c */*.h; do
	for header in $(recurse_headers "$file" | sort | uniq); do
		if [ "${file%.c}.c" = "${file}" ]; then
			echo "${file%.c}.o: ${header}"
		else
			echo "${file}: ${header}"
		fi
	done
done
